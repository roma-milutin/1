@import url('https://fonts.googleapis.com/css2?family=Madimi+One&display=swap');
body {
    font-family: "Madimi";
    background-color: #1c1c1c;
    color: #fff;
}

a {
    color: #fff;
    text-decoration: none;
}

ul {
    list-style: none;
}

h1, h2, h3, h4, h5, h6 {
    margin: 0;
    font-weight: 500;
}

p {
    margin: 0;
}

p + p {
    margin-top: 10px;
}

.header {
    padding: 25px 0;
}

.header .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.container {
    max-width: 1170px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 15px;

    box-sizing: border-box;
}

.header-list {
    display: flex;
    gap: 30px;
}

.header-nav a.active {
    opacity: 1;
}

.header-nav a {
font-size: 14px;
opacity: 0.7;
transition: opacity 0.3s;
}

.header-nav a:hover {
    opacity: 0.9;
}

.button {
    display: flex;
    align-items: center;
    justify-content: center;

    font-weight: 500;
    font-size: 16px;

    width: 165px;
    height: 50px;

    background-color: #F6762c;
    border-radius: 5px;

    transition: opacity 0.3s;
}

.button:hover {
    opacity: 0.8;
}

.button-small {
    width: 140px;
    height: 40px;
    font-size: 14px;
}

.welcome {
    box-sizing: border-box;
    min-height: 100vh;
    margin-top: -100px;
    padding: 240px 0;
    background-image: url("images/welcome-burger.png");
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

.welcome-text {
    width: 550px;
}

.welcome-subtitle {
    margin-bottom: 7px;
    font-size: 14px;
    letter-spacing: 0.1em;
}

.welcome-title {
    font-size: 58px;
    letter-spacing: 0.1em;
}

.welcome-desc {
    margin: 40px 0;
    font-size: 18px;
    opacity: 0.7;
}

.food-list {
    padding: 100px 0;
}

.food-list .container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 40px 10px;
}

.food-list-card {
    width: 260px;
    overflow: hidden;
    background-color: #312f30;
    border-radius: 10px;
}
.food-list-card:hover {
    opacity: 0.7;
    transition: opacity 0.2s;

}

.food-list-image {
    max-width: 100%;
    height: 175px;
}

.food-list-text-wrapper {
    padding: 30px 20px;
}

.food-list-title {
    font-size: 20px;
    margin-bottom: 13px;
}

.food-list-desc {
    font-size: 16px;
    opacity: 0.7;
}

.order {
    background-color: #312f30;
    padding: 60px 0;
}

.order .container {
    display: flex;
    justify-content: space-between;
    align-items: center;

    padding-right: 90px;
}

.order-text {
    max-width: 360px;

}

.order-image {
    max-width: 470px;
}

.order-title {
    font-size: 44px;
    margin-bottom: 25px;
}
.order-desc {
    opacity: 0.7;
}

.order-price {
    color: #F6762c;
    font-size: 20px;
    font-weight: 500;
    letter-spacing: 0.1em;
}

.order-price-old {
    font-size: 16px;
    text-decoration: line-through;
    opacity: 0.5;
}

.order .button {
    margin-top: 10px;
}

.order-price + .order-price {
    margin-left: 5px;
}




.product-card {
    width: 555px;
    min-height: 300px;
    padding: 60px 30px 60px  290px;
    box-sizing: border-box;
}
.product-title {
    font-size: 30px;
    margin-bottom: 20px;
}

.product-desc {
    opacity: 0.7;
    margin-bottom: 15px;
}

.product .button {
    margin-top: 10px;
}

.product-price {
    color: #F6762c;
    font-size: 20px;
    font-weight: 500;
    letter-spacing: 0.1em; 
}

.product-price-old {
    font-size: 16px;
    text-decoration: line-through;
    opacity: 0.5;
}

.product-price + .product-price {
    margin-left: 5px;
}

.card-qeen {
    background-image: url("images/product-1.png");
}

.card-king {
    background-image: url("images/product-3.png");
}

.card-hut {
    background-image: url("images/product-2.png");
}

.card-papa {
    background-image: url("images/product-4.png");
}
